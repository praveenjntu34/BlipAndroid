<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutCustomStyleBatch" parent="AutenticationModuleTheme">
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">#deababab</item>
        <item name="colorControlNormal">#deababab</item>
        <item name="colorControlActivated">#deababab</item>
        <item name="colorControlHighlight">#4a4a4a</item>
        <item name="actionBarSize">1dp</item>
    </style>

    <style name="AutenticationModuleTheme" parent="MyMaterialTheme.Base" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/auth_colorPrimaryDark</item>
        <item name="colorAccent">@color/auth_colorAccent</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">#545656</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">#545656</item>
    </style>

</resources>
