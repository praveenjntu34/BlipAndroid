<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_40dp"
    android:layout_marginEnd="@dimen/margin_40dp">


    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Have a question? Send an email"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_title">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="#EEEEEE"
            android:gravity="start"
            android:paddingStart="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_8dp"
            android:text="@string/name_contact"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:textSize="18sp"
            app:layout_constraintCircleRadius="@dimen/margin_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_title" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="#EEEEEE"
            android:gravity="start"
            android:paddingStart="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_8dp"
            android:text="@string/email_id_contact"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_address_box"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="#EEEEEE"
            android:gravity="start"
            android:paddingStart="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_8dp"
            android:text="@string/contact_address"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/margin_5dp"
        android:paddingTop="@dimen/margin_8dp"
        android:text="OR"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_contact_us" />

    <Button
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:background="@color/colorGreen"
        android:text="Connect with us through WhatsApp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_or" />


